md-content
  section.jumbotron
    .text
      h1 Tokyo dodgeball league 2015!
  md-toolbar(layout='row', layout-align='space-around center')
    section(flex, layout='row', layout-align='space-around center')
      md-button.md-raised.md-accent(href='#', scroll-to="league") League
      md-button.md-raised.md-accent(href='#', scroll-to="schedule") Schedule
  md-content(layout-fill)
    section.md-whiteframe-z1.content#league
      md-toolbar.md-primary.md-default-theme
        .md-toolbar-tools
          h3 League
      md-subheader.md-accent Current Standings
      md-content.content(layout layout-align='center center')
        md-data-table-container
          table(md-data-table)
            thead
              tr
                th(name='Team')
                th(numeric name='Points')
            tbody
              tr(ng-repeat="team in main.data.league | orderBy: '- points'")
                td {{team.name}}
                td {{team.points}} 

    section.md-whiteframe-z1.content#schedule
      md-toolbar.md-primary.md-default-theme
        .md-toolbar-tools
          h3 Schedule 
      md-subheader.md-accent Matches
      md-content.content(layout layout-padding layout-align='center center')
        md-data-table-container.schedule
          table(md-data-table)
            thead
            tbody
              tr(ng-repeat='match in main.data.schedule')
                td {{match.date}}
                td {{match.first}}
                td
                  span.versus VS
                td {{match.second}}
